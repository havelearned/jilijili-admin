<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.jilijili.mall.shop.mapper.ProductsMapper">

    <resultMap id="BaseResultMap" type="top.jilijili.module.entity.Products">
            <id property="productId" column="product_id" jdbcType="BIGINT"/>
            <result property="categoryId" column="category_id" jdbcType="BIGINT"/>
            <result property="productName" column="product_name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="price" column="price" jdbcType="DECIMAL"/>
            <result property="stockQuantity" column="stock_quantity" jdbcType="INTEGER"/>
            <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
            <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
            <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        product_id,category_id,product_name,
        description,price,stock_quantity,
        image_url,created_time,updated_time
    </sql>

    <select id="queryProductsByToDayData" resultType="java.lang.Integer">
        select count(*) as today_added_total
        from shop_products
        where date(created_time) = curdate();
    </select>

    <select id="queryProductsByDateData" resultType="top.jilijili.module.entity.vo.ProductsEChartsVo">
        select date(created_time) as created_time, count(*) as today_added_total
        from shop_products
        where created_time between #{productsDto.createdTime} and #{productsDto.comparisonTime}
        group by created_time;
    </select>

</mapper>
